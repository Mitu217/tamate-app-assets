{
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./dist/",
    // TSはECMAScript 5に変換
    "target": "es5",
    // TSのモジュールはES Modulesとして出力
    "module": "es2015",
    // JSXの書式を有効に設定
    "jsx": "react",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
